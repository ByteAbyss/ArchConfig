!! Appearance
urxvt.termName: rxvt-unicode
! Transparent
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/c800
! pywal add on
urxvt*transparent: true
urxvt*shading: 30

urxvt.scrollBar: true
urxvt.foreground: #8B8B98

!! Font prefferenes
urxvt.font: xft:FiraCode Nerd Font Mono:size=14,style=regular
urxvt.boldFont: xft:FiraCode Nerd Font Mono::size=14,style=bold
urxvt.letterSpace: -1

!! Larger history limit
urxvt.saveLines: 1000

!! Perl extensions
URxvt.perl-ext-common: default,matcher,font-size,url-select,keyboard-select,clipboard,selection,selection-to-clipboard,selection-popup,selection-autotransform

!! Clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.clipboard.copycmd: xsel -ib
URxvt.clipboard.pastecmd: xsel -ob


!! Open urls in browser with Control-Click
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-launcher: firefox
URxvt.matcher.button: 1

!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease


! keyboard-select
URxvt.keysym.M-s: perl:keyboard-select:activate
URxvt.keysym.M-r: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true
URxvt.clipboard.autocopy: true

!! Yeah, I am one of those, who use these keys in Vim :-(
urxvt.keysym.Home:          \033[1~
urxvt.keysym.End:           \033[4~
urxvt.keysym.Control-Up:    \033[1;5A
urxvt.keysym.Control-Down:  \033[1;5B
urxvt.keysym.Control-Left:  \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C


URxvt*scrollBar:          true     
! scrollbar width
URxvt*thickness:          18
! scrollbar color
URxvt*scrollColor:        #C0C0C0
! scrollbar trough area color
URxvt*troughColor:        #333333
! scrollbar without a trough
!URxvt*scrollBar_floating: false
! scrollbar to the right
URxvt*scrollBar_right:    true
! scrollbar style
URxvt*scrollstyle:        plain

Urxvt*jumpScroll:           true
! skip scrolling
URxvt*skipScroll:           false
! scroll to bottom on output
URxvt*scrollTtyOutput:      true
! scroll to bottom when a non-special key is pressed
URxvt*scrollTtyKeypress:    false
! scroll to bottom when tty receives new lines
URxvt*scrollWithBuffer:     false
! scroll page by page
URxvt*mouseWheelScrollPage: True





! special
*.foreground:   #d0d0d0
*.background:   #000000
*.cursorColor:  #d0d0d0

! black
*.color0:       #000000
*.color8:       #808080

! red
*.color1:       #ff0000
*.color9:       #ff0000

! green
*.color2:       #33ff00
*.color10:      #33ff00

! yellow
*.color3:       #ff0099
*.color11:      #ff0099

! blue
*.color4:       #0066ff
*.color12:      #0066ff

! magenta
*.color5:       #cc00ff
*.color13:      #cc00ff

! cyan
*.color6:       #00ffff
*.color14:      #00ffff

! white
*.color7:       #d0d0d0
*.color15:      #ffffff

